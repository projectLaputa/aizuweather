<h1>New User</h1>
<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class="field">
		<b><%= f.label :name, "UserName" %></b><br />
		<%=h f.text_field :name %>
	</div>
	<div class="field">
		<b><%= f.label :password, "Password" %></b><br />
		<%=h f.password_field :password %>
	</div>
	<div class="field">
		<b><%= f.label :password_confirmation, "Password(confirm)" %></b><br />
		<%=h f.password_field :password_confirmation %>
	</div>
	<div class="actions">
		<%=f.submit "create" %>
	</div>
<% end %>
